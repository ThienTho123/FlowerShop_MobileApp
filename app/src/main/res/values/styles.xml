<resources>
    <!-- Theme mặc định -->
    <style name="AppTheme" parent="Theme.Material3.Light">
        <!-- Các thuộc tính theme chung -->
    </style>

    <!-- Style cho tiêu đề bảng -->
    <style name="TableHeaderStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/colorPinkSoft</item>
    </style>

    <!-- Style cho thông tin đơn hàng -->
    <style name="OrderDetailText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- Style cho nhãn thông tin -->
    <style name="LabelText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingTop">5dp</item>
    </style>
    <style name="LabelStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ValueStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="CustomButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/colorGreen</item> <!-- Ép màu xanh lá -->
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item> <!-- Chỉnh kích thước chữ -->
        <item name="android:padding">12dp</item>
    </style>

    <style name="CustomButtonStyle.Red" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/colorRed</item> <!-- Ép màu đỏ -->
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="FullRoundAvatar">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="cornerSizeTopLeft">50%</item>
        <item name="cornerSizeTopRight">50%</item>
        <item name="cornerSizeBottomLeft">50%</item>
        <item name="cornerSizeBottomRight">50%</item>
    </style>



    <!-- Style cho giá trị dữ liệu -->
    <style name="ValueText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <!-- Style cho tiêu đề cột trong bảng -->
    <style name="TableHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">#FF5722</item> <!-- Màu cam nổi bật -->
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
